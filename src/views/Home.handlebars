<h1>Play!</h1>

<div>
    {{#each videogames}}
    <div>
        <p class="title">{{this.title}}</p>
        <p class="price">{{this.price}}</p>
        <img src={{this.images}}>
        <p class="description">{{this.description}}</p>
        <br/>
    </div>
    {{/each}}
</div>

<div>
    {{#if hasPrevPage}}
    <a href="/?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

    <h4>{{page}}</h4>

    {{#if hasNextPage}}
    <a href="/?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}
</div>